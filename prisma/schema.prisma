generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RouletteBet {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  betType       BetType
  bet           String
  amountInSats  Int
  userNpub      String
  eventId       String   @unique
  playerLightningAddress  String
  status        BetStatus @default(INIT)
  secret        String
  
  // Lightning payment fields
  paymentHash   String?  @unique
  paymentRequest String?
  invoicePaid   Boolean  @default(false)
  paidAt        DateTime?

  @@map("roulette_bets")
}

enum BetType {
  COLOR  @map("color")
  NUMBER @map("number")
}

enum BetStatus {
  INIT                @map("init")
  PLACED              @map("placed")
  LOST                @map("lost")
  WON                 @map("won")
  WON_AND_PAID        @map("wonAndPaid")
  WON_PAYMENT_FAILED  @map("wonPaymentFailed")
  WON_PAYMENT_ERROR   @map("wonPaymentError")
}
